---
/**
 * Compare hub page.
 *
 * Grid of all VS comparison pages.
 * Route: /compare
 */
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

// Get all published compare items
const allCompare = (
  await getCollection("compare", ({ data }) => !data.draft)
).sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout
  title="ZenML Comparisons - ZenML"
  description="See how ZenML compares to other MLOps tools and platforms."
>
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900">ZenML vs. Others</h1>
      <p class="mt-4 text-lg text-gray-600">
        See how ZenML compares to other MLOps tools and platforms.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {allCompare.map((item) => (
        <a
          href={`/compare/${item.data.slug}`}
          class="group flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-6 transition-shadow hover:shadow-md"
        >
          {item.data.toolIcon ? (
            <img
              src={item.data.toolIcon.url}
              alt={item.data.toolName || item.data.title}
              class="h-12 w-12 shrink-0 rounded-lg object-contain"
            />
          ) : (
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-gray-100 text-lg font-bold text-gray-400">
              {(item.data.toolName || item.data.title)[0]}
            </div>
          )}
          <div>
            <h2 class="font-semibold text-gray-900 group-hover:text-primary-600">
              {item.data.title}
            </h2>
            {item.data.category && (
              <p class="mt-1 text-sm text-gray-500">{item.data.category}</p>
            )}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
