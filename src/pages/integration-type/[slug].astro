---
/**
 * Integration type taxonomy page.
 *
 * Renders a filtered view of integrations for this type, with a link back to
 * the hub pre-filtered. Matches the hub card style for consistency.
 *
 * Generates /integration-type/<slug> for each integration type.
 */
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const integrationTypes = await getCollection("integration-types");
  return integrationTypes.map((itype) => ({
    params: { slug: itype.data.slug },
    props: { integrationType: itype },
  }));
}

const { integrationType } = Astro.props;

// Get all published integrations of this type
const allIntegrations = (
  await getCollection("integrations", ({ data }) => !data.draft && data.integrationType === integrationType.data.slug)
).sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout
  title={`${integrationType.data.name} Integrations - ZenML`}
  description={`ZenML integrations in the ${integrationType.data.name} category. Browse ${allIntegrations.length} integrations.`}
>
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <header class="mb-10">
      <a
        href={`/integrations?type=${integrationType.data.slug}`}
        class="inline-flex items-center gap-1 text-sm font-medium text-primary-600 hover:text-primary-700"
      >
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 12H4M4 12L10 18M4 12L10 6" />
        </svg>
        All integrations
      </a>
      <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {integrationType.data.name}
      </h1>
      <p class="mt-2 text-lg text-gray-600">
        {allIntegrations.length} {allIntegrations.length === 1 ? "integration" : "integrations"} in this category
      </p>
    </header>

    {/* Integration list â€” same card style as hub */}
    <div class="space-y-3">
      {allIntegrations.map((integration) => (
        <a
          href={`/integrations/${integration.data.slug}`}
          class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 transition-shadow hover:shadow-md"
        >
          {integration.data.logo ? (
            <div class="flex h-[60px] w-[60px] shrink-0 items-center justify-center rounded-lg bg-gray-50 p-2">
              <img
                src={integration.data.logo.url}
                alt={integration.data.logo.alt || integration.data.title}
                class="h-10 w-10 object-contain"
                loading="lazy"
              />
            </div>
          ) : (
            <div class="flex h-[60px] w-[60px] shrink-0 items-center justify-center rounded-lg bg-gray-100 text-lg font-bold text-gray-400">
              {integration.data.title[0]}
            </div>
          )}
          <div class="min-w-0">
            <h2 class="text-base font-semibold text-gray-900">
              {integration.data.title}
            </h2>
            <div class="mt-0.5 text-sm text-gray-500">
              {integrationType.data.name}
            </div>
          </div>
        </a>
      ))}
    </div>

    {allIntegrations.length === 0 && (
      <p class="py-12 text-center text-gray-500">No integrations of this type yet.</p>
    )}
  </div>
</BaseLayout>
