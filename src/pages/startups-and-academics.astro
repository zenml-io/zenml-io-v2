---
/**
 * Startups and Academics — application form for ZenML Pro program.
 *
 * Route: /startups-and-academics
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/islands/ContactForm.tsx";
import { TURNSTILE_SITE_KEY } from "../lib/formConstants";
import {
  STARTUPS_SEO,
  STARTUPS_HERO,
  STARTUPS_FIELDS,
} from "../lib/startupsAndAcademics";
---

<BaseLayout
  title={STARTUPS_SEO.title}
  description={STARTUPS_SEO.description}
  ogTitle={STARTUPS_SEO.ogTitle}
  ogDescription={STARTUPS_SEO.ogDescription}
>
  <main>
    <section class="bg-white py-16 sm:py-24">
      <div class="mx-auto max-w-xl px-4 sm:px-6 lg:px-8">
        <div class="mb-8 text-center">
          {STARTUPS_HERO.eyebrow && (
            <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500">
              {STARTUPS_HERO.eyebrow}
            </p>
          )}
          <h1 class="mt-2 text-3xl font-bold text-gray-900 sm:text-4xl">
            {STARTUPS_HERO.headline}
          </h1>
          <p class="mt-3 text-lg text-gray-600">{STARTUPS_HERO.deck}</p>
        </div>

        <ContactForm
          client:load
          formType="startup-application"
          endpoint="/api/forms/startup-application"
          fields={STARTUPS_FIELDS}
          submitLabel="Apply"
          loadingLabel="Submitting…"
          successMessage="Thank you for your application! We'll review it and get back to you soon."
          turnstileSiteKey={TURNSTILE_SITE_KEY}
        />
      </div>
    </section>
  </main>
</BaseLayout>
