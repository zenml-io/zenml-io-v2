---
/**
 * Book a Demo Success â€” thank-you page with Cal.com embed.
 *
 * Route: /book-a-demo-success (noindex)
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import CalEmbed from "../components/sections/CalEmbed.astro";
import {
  BOOK_A_DEMO_SUCCESS_SEO,
  BOOK_A_DEMO_SUCCESS_HERO,
  BOOK_A_DEMO_SUCCESS_CAL,
} from "../lib/bookADemoSuccess";
---

<BaseLayout
  title={BOOK_A_DEMO_SUCCESS_SEO.title}
  description={BOOK_A_DEMO_SUCCESS_SEO.description}
  noindex={BOOK_A_DEMO_SUCCESS_SEO.noindex}
>
  <main>
    <section class="bg-white pt-16 pb-4 sm:pt-24 sm:pb-8">
      <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          {BOOK_A_DEMO_SUCCESS_HERO.headline}
        </h1>
        <p class="mt-3 text-lg text-gray-600">{BOOK_A_DEMO_SUCCESS_HERO.deck}</p>
      </div>
    </section>

    <section class="bg-white pb-16 sm:pb-20">
      <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
        <CalEmbed config={BOOK_A_DEMO_SUCCESS_CAL} />
      </div>
    </section>
  </main>
</BaseLayout>
