            </svg>
            <span>2.9k</span>
          </a>
        </div>
      </div>

      <!-- Right column: vertically stacked blog post cards -->
      <div class="flex flex-col gap-8">
        {latestPosts.map((post, i) => (
          <a
            href={`/blog/${post.data.slug}`}
            class="group grid grid-cols-[2fr_3fr] items-start gap-6"
            data-reveal
            style={`transition-delay:${(i + 1) * 80}ms`}
          >
            {post.data.mainImage?.url && (
              <div class="overflow-hidden rounded-lg transition-shadow group-hover:shadow-lg">
                <img
                  src={post.data.mainImage.url}
                  alt={post.data.title}
                  class="aspect-[5/3] w-full object-cover"
                  loading="lazy"
                />
              </div>
            )}
            <h3 class="pt-2 text-base font-semibold leading-snug text-gray-900 transition-colors group-hover:text-zenml-500">
              {post.data.title}
            </h3>
          </a>
        ))}
      </div>

    </div>
  </div>
</section>

<script>
  // Fetch GitHub star count (same as Webflow's CountUp approach, simplified)
  async function fetchStars() {
    try {
      const res = await fetch("https://api.github.com/repos/zenml-io/zenml");
      if (!res.ok) return;
      const data = await res.json();
      const el = document.getElementById("zenml-stars");
      if (el && data.stargazers_count) {
        el.textContent = data.stargazers_count.toLocaleString();
      }
    } catch {
      // Silently fail — the dash placeholder stays
    }
  }
  fetchStars();
</script>

<style>
  [data-reveal] {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  [data-reveal].in-view {
    opacity: 1;
    transform: translateY(0);
  }
  @media (prefers-reduced-motion: reduce) {
    [data-reveal] {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  const newsSection = document.querySelector('[data-reveal-scope="news"]');
  if (newsSection) {
    const revealEls = newsSection.querySelectorAll("[data-reveal]");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1, rootMargin: "0px 0px -40px 0px" },
    );
    revealEls.forEach((el) => observer.observe(el));
  }
</script>
