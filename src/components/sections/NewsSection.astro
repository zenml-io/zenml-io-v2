---
/**
 * NewsSection — latest blog posts + community stats.
 *
 * Matches Webflow's uui-section_blogsection09: 2-column layout with
 * text + community widget on the left, and 3 vertically-stacked
 * horizontal blog cards on the right. Light purple gradient background.
 *
 * Grid: 0.75fr / 1fr (~43%/57%), 4rem column gap.
 * Post cards: image left (rounded), title right, stacked vertically with 2rem gap.
 * Community widget: GitHub stars (fetched client-side) + Slack member count.
 */
import { getCollection } from "astro:content";

// Exclude "discovery"-tagged posts from the homepage news section
const allPosts = await getCollection("blog", ({ data }) => !data.draft && !data.tags.includes("discovery"));
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<section class="border-y border-zenml-25 bg-cover bg-center py-20 sm:py-28" style="background-image: url('/images/zenml_light_bg-02.avif')" data-reveal-scope="news">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid items-start gap-10 lg:grid-cols-[3fr_4fr] lg:gap-16">

      <!-- Left column: text + community widget -->
      <div data-reveal>
        <p class="text-base font-semibold text-zenml-500">News</p>
        <h2 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-[2.25rem] sm:leading-[1.3]">
          Latest ZenML Updates
        </h2>
        <p class="mt-3 text-lg leading-relaxed text-gray-600">
          Stay updated on the latest developments, announcements, and updates
          from the ZenML ecosystem.
        </p>
        <a
          href="/blog"
          class="mt-4 inline-flex items-center gap-1 text-base font-semibold text-zenml-500 hover:text-zenml-600 transition-colors"
        >
          See all news
          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
          </svg>
        </a>

        <!-- Community widget -->
        <div class="mt-6 inline-flex items-stretch overflow-hidden rounded-lg border border-gray-300 bg-white">
          <a
            href="https://github.com/zenml-io/zenml"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 border-r border-gray-300 px-3 py-2 text-sm font-semibold text-gray-900 transition-colors hover:bg-gray-50"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            <span id="zenml-stars">—</span>
          </a>
          <a
            href="/slack"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-3 py-2 text-sm font-semibold text-gray-900 transition-colors hover:bg-gray-50"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zm1.271 0a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313z" fill="#E01E5A"/>
