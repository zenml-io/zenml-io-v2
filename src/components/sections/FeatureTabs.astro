---
/**
 * FeatureTabs — "The ZenML Advantage" tabbed feature showcase.
 *
 * Shows an eyebrow + headline, a 4-stat grid, and an auto-cycling
 * tab slider (Preact island) matching the original Webflow layout:
 * vertical left menu (40%) + right image panel (60%) with gradient bg.
 */
import { FEATURE_TABS_HEADER, FEATURE_TABS, STATS } from "../../lib/homepage";
import FeatureTabsSlider from "../islands/FeatureTabsSlider";
---

<section class="feature-tabs scroll-reveal-section bg-white py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header — slides in from top on scroll -->
    <div class="scroll-slide-top text-center">
      <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500">
        {FEATURE_TABS_HEADER.eyebrow}
      </p>
      <h2 class="mt-2 text-3xl font-bold text-gray-900 sm:text-4xl">
        {FEATURE_TABS_HEADER.headline} {FEATURE_TABS_HEADER.subheadline}
      </h2>
    </div>

    <!-- Stats grid — slides in from top on scroll -->
    <div class="scroll-slide-top stagger-1 mt-12 grid grid-cols-2 gap-6 sm:grid-cols-4">
      {STATS.map((stat) => (
        <div class="text-center">
          <p class="text-3xl font-bold text-gray-900 sm:text-4xl">{stat.value}</p>
          <p class="mt-1 text-sm text-gray-600">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Tabs slider — Preact island with autoplay -->
    <div class="scroll-fade-in stagger-2 mt-16">
      <FeatureTabsSlider
        client:load
        tabs={FEATURE_TABS}
        defaultIndex={3}
        autoDurationMs={9000}
      />
    </div>
  </div>
</section>

<style>
  /* Slide-in-from-top animation for header and stats */
  .scroll-slide-top {
    opacity: 0;
    transform: translateY(-30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  /* Fade-in animation for tab slider */
  .scroll-fade-in {
    opacity: 0;
    transition: opacity 0.8s ease-out;
  }

  /* Stagger delays for sequential reveal */
  .stagger-1 { transition-delay: 0.15s; }
  .stagger-2 { transition-delay: 0.3s; }

  /* Revealed state */
  .scroll-reveal-section.in-view .scroll-slide-top,
  .scroll-reveal-section.in-view .scroll-fade-in {
    opacity: 1;
    transform: none;
  }

  /* Respect reduced-motion preference */
  @media (prefers-reduced-motion: reduce) {
    .scroll-slide-top,
    .scroll-fade-in {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<style is:global>
  /* ── Tab Slider Layout (matches Webflow .tab-slider) ─────────────── */
  .feature-tabs .tab-slider {
    display: flex;
    align-items: stretch;
    justify-content: flex-start;
    width: 100%;
    gap: 1rem;
  }

  /* Left column: vertical nav menu */
  .feature-tabs .tab-slider-menu {
    display: flex;
    flex-direction: column;
    width: 40%;
  }

  /* Right column: image panel with gradient bg */
  .feature-tabs .tab-slider-content {
    width: 60%;
    min-height: 520px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background-image: url("/images/tab_bg.avif");
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: cover;
  }

  /* ── Individual tab button ───────────────────────────────────────── */
  .feature-tabs .tab-slider-tab {
    position: relative;
    text-align: left;
    background: transparent;
    border: none;
    border-bottom: 1px solid #d0d5dd; /* gray-300 */
    color: #d0d5dd;
    padding: 2rem 1.5rem;
    min-height: 6.5rem;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .feature-tabs .tab-slider-tab.w--current {
    color: #101828; /* gray-900 */
    min-height: auto;
  }

  .feature-tabs .tab-slider-title {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.4;
  }

  /* ── Description: expand/collapse via grid-template-rows trick ──── */
  .feature-tabs .tab-slider-nav-desc {
    display: grid;
    grid-template-rows: 0fr;
    opacity: 0;
    transition: grid-template-rows 0.8s ease, opacity 1s ease;
  }

  .feature-tabs .tab-slider-tab.w--current .tab-slider-nav-desc {
    grid-template-rows: 1fr;
    opacity: 1;
  }

  .feature-tabs .tab-slider-nav-desc > div {
    overflow: hidden;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #475467; /* gray-600 */
    padding-top: 0.5rem;
  }

  /* ── Progress bar ────────────────────────────────────────────────── */
  .feature-tabs .tab-slider-progress {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 0.25rem;
    width: 0%;
    background-color: var(--color-zenml-500, #7a3ef4);
  }

  /* ── Stacked panes (opacity/visibility, not display:none) ────────── */
  .feature-tabs .tab-slider-pane {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 300ms ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .feature-tabs .tab-slider-pane.w--tab-active {
    position: relative;
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .feature-tabs .tab-slider-image {
    width: 100%;
    max-width: 720px;
    height: auto;
    border-radius: 8px;
  }

  /* ── Responsive: stack menu above content on tablet/mobile ──────── */
  @media (max-width: 1023px) {
    .feature-tabs .tab-slider {
      flex-direction: column;
    }
    .feature-tabs .tab-slider-menu {
      width: 100%;
    }
    .feature-tabs .tab-slider-content {
      width: 100%;
      margin-top: 2rem;
      min-height: auto;
    }
  }

  @media (max-width: 479px) {
    .feature-tabs .tab-slider-content {
      padding: 1rem;
      min-height: auto;
    }
    .feature-tabs .tab-slider-tab {
      padding: 1.25rem 1rem;
      min-height: auto;
    }
  }
</style>

<script>
  // Scroll-triggered reveal (kept from original — one-shot IntersectionObserver)
  document.querySelectorAll<HTMLElement>('.scroll-reveal-section').forEach((section) => {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          section.classList.add('in-view');
          observer.disconnect();
        }
      },
      { threshold: 0.1 }
    );
    observer.observe(section);
  });
</script>
