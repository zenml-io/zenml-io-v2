---
/**
 * FeatureTabs — tabbed feature showcase with stats grid.
 *
 * Shows an eyebrow + headline, a 4-stat grid, and 5 feature tabs.
 * Tabs switch content via CSS-only :target or a tiny inline script.
 * Each tab has a title, description, and screenshot image.
 */
import { FEATURE_TABS_HEADER, FEATURE_TABS, STATS } from "../../lib/homepage";
---

<section class="scroll-reveal-section bg-white py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header — slides in from top on scroll -->
    <div class="scroll-slide-top text-center">
      <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500">
        {FEATURE_TABS_HEADER.eyebrow}
      </p>
      <h2 class="mt-2 text-3xl font-bold text-gray-900 sm:text-4xl">
        {FEATURE_TABS_HEADER.headline}
      </h2>
      <p class="mt-2 text-lg text-gray-600">
        {FEATURE_TABS_HEADER.subheadline}
      </p>
    </div>

    <!-- Stats grid — slides in from top on scroll -->
    <div class="scroll-slide-top stagger-1 mt-12 grid grid-cols-2 gap-6 sm:grid-cols-4">
      {STATS.map((stat) => (
        <div class="text-center">
          <p class="text-3xl font-bold text-zenml-500 sm:text-4xl">{stat.value}</p>
          <p class="mt-1 text-sm text-gray-600">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Tabs — fades in on scroll -->
    <div class="scroll-fade-in stagger-2 mt-16" id="feature-tabs">
      <!-- Tab buttons -->
      <div class="flex flex-wrap justify-center gap-2 border-b border-gray-200" role="tablist">
        {FEATURE_TABS.map((tab, i) => (
          <button
            role="tab"
            aria-selected={i === 0 ? "true" : "false"}
            aria-controls={`tab-panel-${i}`}
            data-tab-index={i}
            class:list={[
              "feature-tab-btn whitespace-nowrap px-4 py-3 text-sm font-medium transition",
              i === 0
                ? "border-b-2 border-zenml-500 text-zenml-500"
                : "text-gray-500 hover:border-b-2 hover:border-gray-300 hover:text-gray-700",
            ]}
          >
            {tab.title}
          </button>
        ))}
      </div>

      <!-- Tab panels -->
      {FEATURE_TABS.map((tab, i) => (
        <div
          id={`tab-panel-${i}`}
          role="tabpanel"
          class:list={[
            "feature-tab-panel mt-8 grid items-center gap-8 lg:grid-cols-2",
            i === 0 ? "" : "hidden",
          ]}
        >
          <div>
            <h3 class="text-xl font-semibold text-gray-900">{tab.title}</h3>
            <p class="mt-3 text-gray-600 leading-relaxed">{tab.description}</p>
          </div>
          <div class="overflow-hidden rounded-xl border border-gray-200 shadow-lg">
            <img
              src={tab.image}
              alt={tab.imageAlt}
              class="w-full"
              loading="lazy"
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Slide-in-from-top animation for header and stats */
  .scroll-slide-top {
    opacity: 0;
    transform: translateY(-30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  /* Fade-in animation for tab slider */
  .scroll-fade-in {
    opacity: 0;
    transition: opacity 0.8s ease-out;
  }

  /* Stagger delays for sequential reveal */
  .stagger-1 { transition-delay: 0.15s; }
  .stagger-2 { transition-delay: 0.3s; }

  /* Revealed state */
  .scroll-reveal-section.in-view .scroll-slide-top,
  .scroll-reveal-section.in-view .scroll-fade-in {
    opacity: 1;
    transform: none;
  }

  /* Respect reduced-motion preference */
  @media (prefers-reduced-motion: reduce) {
    .scroll-slide-top,
    .scroll-fade-in {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  // --- Tab switching ---
  const ACTIVE_CLASSES = ["border-b-2", "border-zenml-500", "text-zenml-500"];
  const INACTIVE_CLASSES = ["text-gray-500", "hover:border-b-2", "hover:border-gray-300", "hover:text-gray-700"];

  const tabBtns = document.querySelectorAll<HTMLButtonElement>(".feature-tab-btn");
  const tabPanels = document.querySelectorAll<HTMLDivElement>(".feature-tab-panel");

  tabBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const idx = Number(btn.dataset.tabIndex);

      tabBtns.forEach((b) => {
        const isActive = b === btn;
        b.setAttribute("aria-selected", String(isActive));
        ACTIVE_CLASSES.forEach((c) => b.classList.toggle(c, isActive));
        INACTIVE_CLASSES.forEach((c) => b.classList.toggle(c, !isActive));
      });

      tabPanels.forEach((panel, i) => {
        panel.classList.toggle("hidden", i !== idx);
      });
    });
  });

  // --- Scroll-triggered reveal ---
  const section = document.querySelector('.scroll-reveal-section');
  if (section) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          section.classList.add('in-view');
          observer.disconnect();
        }
      },
      { threshold: 0.1 }
    );
    observer.observe(section);
  }
</script>
