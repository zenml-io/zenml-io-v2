---
/**
 * VsRelatedCompareGrid â€” grid of related tool-specific comparisons.
 *
 * Renders a list of /compare/[slug] entries filtered by category.
 * The items are passed in from the page template which filters
 * the compare collection by compareCategory.
 */
interface Props {
  eyebrow?: string;
  headline?: string;
  items: { title: string; href: string; toolIcon?: { url: string; alt?: string } }[];
}

const { eyebrow, headline, items } = Astro.props;
---

{items.length > 0 && (
  <section class="bg-gray-50 py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      {eyebrow && (
        <span class="text-xs font-semibold uppercase tracking-wider text-zenml-500">
          {eyebrow}
        </span>
      )}
      {headline && (
        <h2 class="mt-2 text-2xl font-bold text-gray-900 sm:text-3xl">
          {headline}
        </h2>
      )}
      <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {items.map((item) => (
          <a
            href={item.href}
            class="group flex items-center gap-4 rounded-md border border-gray-200 bg-white p-5 shadow-sm transition hover:border-zenml-300 hover:shadow-md"
          >
            {item.toolIcon && (
              <img
                src={item.toolIcon.url}
                alt={item.toolIcon.alt || ""}
                class="h-10 w-10 shrink-0 rounded-lg object-contain"
                loading="lazy"
              />
            )}
            <span class="text-sm font-semibold text-gray-900 group-hover:text-zenml-500 transition">
              {item.title}
            </span>
            <svg class="ml-auto h-4 w-4 shrink-0 text-gray-400 transition group-hover:text-zenml-500 group-hover:translate-x-0.5" viewBox="0 0 21 20" fill="none">
              <path d="M4.667 10h11.666m0 0L10.5 4.167M16.333 10 10.5 15.833" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>
)}
