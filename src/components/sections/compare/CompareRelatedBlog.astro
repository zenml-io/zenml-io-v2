---
/**
 * CompareRelatedBlog â€” "Expand Your Knowledge" blog cards section.
 *
 * Renders a 3-up grid of blog post cards on a gradient background.
 * Reuses the BlogCard component for consistent site-wide styling.
 */
import BlogCard from "../../blog/BlogCard.astro";

interface BlogPost {
  slug: string;
  title: string;
  mainImage?: { url: string; alt?: string; width?: number; height?: number };
  seoDescription?: string;
  date?: Date;
  authorName?: string;
}

interface Props {
  eyebrow?: string;
  headline?: string;
  posts: BlogPost[];
}

const {
  eyebrow = "Expand Your Knowledge",
  headline = "Broaden Your MLOps Understanding with ZenML",
  posts,
} = Astro.props;
---

{posts.length > 0 && (
  <section class="blog-section bg-gradient-to-b from-gray-50 to-white py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10 fade-in-element">
        <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500 mb-3">{eyebrow}</p>
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">{headline}</h2>
      </div>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 fade-in-element">
        {posts.map((post) => (
          <BlogCard
            title={post.title}
            href={`/blog/${post.slug}`}
            image={post.mainImage}
            excerpt={post.seoDescription}
          />
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .blog-section .fade-in-element {
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  .blog-section .fade-in-element.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1 }
  );
  document.querySelectorAll('.blog-section .fade-in-element').forEach((el) => {
    observer.observe(el);
  });
</script>
