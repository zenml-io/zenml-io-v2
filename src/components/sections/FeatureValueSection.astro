---
/**
 * FeatureValueSection â€” a two-column section with text + image.
 *
 * Renders one "value block" from the feature page: heading, body,
 * bullet list, and a screenshot/illustration. Image side alternates.
 *
 * Matches Webflow's uui-layout08 section: 48px heading, circle-check
 * bullets in ZenML purple, 4rem grid gap, 4rem vertical padding.
 */
interface Props {
  title: string;
  body?: string;
  bullets?: string[];
  image?: { url: string; alt?: string };
  imageSide?: "left" | "right";
}

const { title, body, bullets, image, imageSide = "right" } = Astro.props;
const isImageLeft = imageSide === "left";
---

<section class="bg-white py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class:list={[
      "grid items-center gap-10 lg:grid-cols-2 lg:gap-16",
      isImageLeft && "lg:[direction:rtl] lg:*:[direction:ltr]",
    ]}>
      <div class="max-w-[80%]">
        <h2 class="text-3xl font-semibold text-gray-900 leading-tight sm:text-[2.75rem] lg:text-[3rem]">{title}</h2>
        {body && (
          <p class="mt-4 text-lg text-gray-600 leading-relaxed">{body}</p>
        )}
        {bullets && bullets.length > 0 && (
          <ul class="mt-8 space-y-5">
            {bullets.map((item) => (
              <li class="flex items-start gap-3 text-gray-600">
                <svg class="mt-0.5 h-7 w-7 flex-shrink-0" viewBox="0 0 28 29" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8.75 14.38l3.5 3.5 7-7m6.417 3.5c0 6.443-5.224 11.667-11.667 11.667S2.333 20.823 2.333 14.38 7.557 2.713 14 2.713s11.667 5.224 11.667 11.667z" stroke="#7A3EF4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="text-base leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        )}
      </div>
      {image?.url && (
        <div class="overflow-hidden rounded-lg">
          <img
            src={image.url}
            alt={image.alt || title}
            class="w-full"
            loading="lazy"
          />
        </div>
      )}
    </div>
  </div>
</section>
