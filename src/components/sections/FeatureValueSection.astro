---
/**
 * FeatureValueSection â€” a two-column section with text + image.
 *
 * Renders one "value block" from the feature page: heading, body,
 * bullet list, and a screenshot/illustration. Image side alternates.
 */
interface Props {
  title: string;
  body?: string;
  bullets?: string[];
  image?: { url: string; alt?: string };
  imageSide?: "left" | "right";
}

const { title, body, bullets, image, imageSide = "right" } = Astro.props;
const isImageLeft = imageSide === "left";
---

<section class="bg-white py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class:list={[
      "grid items-center gap-8 lg:grid-cols-2",
      isImageLeft && "lg:[direction:rtl] lg:*:[direction:ltr]",
    ]}>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">{title}</h2>
        {body && (
          <p class="mt-3 text-lg text-gray-600 leading-relaxed">{body}</p>
        )}
        {bullets && bullets.length > 0 && (
          <ul class="mt-4 space-y-2">
            {bullets.map((item) => (
              <li class="flex items-start gap-2 text-gray-700">
                <svg class="mt-1 h-5 w-5 flex-shrink-0 text-zenml-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd"/>
                </svg>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        )}
      </div>
      {image?.url && (
        <div class="overflow-hidden rounded-xl border border-gray-200 shadow-lg">
          <img
            src={image.url}
            alt={image.alt || title}
            class="w-full"
            loading="lazy"
          />
        </div>
      )}
    </div>
  </div>
</section>
