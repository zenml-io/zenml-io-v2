---
/**
 * WhitepaperCTA â€” dark/purple full-width banner promoting the whitepaper.
 *
 * Matches Webflow's uui-section_layout78: dark purple (#281158) base with
 * gradient_01.webp image overlay. Text is LEFT-aligned (not centered),
 * constrained to max-width 48rem within an 80rem container.
 * Eyebrow "Whitepaper" is lighter purple (#9e77ed), body text is #f4ebff.
 */
import { WHITEPAPER_CTA } from "../../lib/homepage";
---

<section class="bg-[#281158]">
  <div
    class="bg-[url('/images/gradient_01.webp')] bg-cover bg-center"
  >
    <div class="mx-auto max-w-7xl px-8 sm:px-12">
      <div class="py-20 sm:py-28">
        <div class="max-w-3xl">
          <p class="text-base font-semibold text-[#9e77ed]">
            {WHITEPAPER_CTA.eyebrow}
          </p>
          <h2 class="mt-3 text-3xl font-bold leading-tight text-white sm:text-4xl">
            {WHITEPAPER_CTA.headline}
          </h2>
          <p class="mt-4 text-lg leading-relaxed text-[#f4ebff]">
            {WHITEPAPER_CTA.body}
          </p>
          <div class="mt-8">
            <a
              href={WHITEPAPER_CTA.cta.href}
              class="inline-flex items-center justify-center rounded-md bg-zenml-500 px-6 py-3 text-base font-semibold text-white shadow-button transition-all duration-200 hover:bg-zenml-600"
            >
              {WHITEPAPER_CTA.cta.label}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
