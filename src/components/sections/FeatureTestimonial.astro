---
/**
 * FeatureTestimonial â€” customer quote card for feature pages.
 *
 * Matches Webflow's "testimonial-light" pattern: light-purple card (#f6f2ff),
 * avatar floats above the card edge via negative margin, quote text at 30px
 * semibold, company logo absolute-positioned to bottom-right on desktop
 * (centered on tablet/mobile).
 */
interface Props {
  quote: string;
  name: string;
  title?: string;
  avatar?: { url: string; alt?: string };
  companyLogo?: { url: string; alt?: string };
}

const { quote, name, title, avatar, companyLogo } = Astro.props;
---

<section class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-8">
    <div class="relative flex flex-col items-center rounded-2xl bg-[#f6f2ff] px-6 py-10 text-center sm:p-12 lg:p-16">
      {avatar?.url && (
        <img
          src={avatar.url}
          alt={avatar.alt || name}
          class="-mt-24 mb-8 h-24 w-24 min-w-[6rem] rounded-full object-cover"
          loading="lazy"
        />
      )}
      <p class="text-2xl font-semibold leading-snug tracking-tight text-gray-900 sm:text-[1.875rem] sm:leading-[1.4]">
        {quote}
      </p>
      <div class="mt-8 sm:mt-12">
        <p class="text-lg font-semibold text-gray-900">{name}</p>
        {title && <p class="mt-1 text-base text-gray-500">{title}</p>}
      </div>
      {companyLogo?.url && (
        <img
          src={companyLogo.url}
          alt={companyLogo.alt || "Company logo"}
          class="mt-8 h-8 max-h-8 w-auto object-contain lg:absolute lg:bottom-8 lg:right-8 lg:mt-0"
          loading="lazy"
        />
      )}
    </div>
  </div>
</section>
