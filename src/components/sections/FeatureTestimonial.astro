---
/**
 * FeatureTestimonial â€” customer quote block for feature pages.
 *
 * Renders a centered testimonial with avatar, quote, attribution,
 * and optional company logo.
 */
interface Props {
  quote: string;
  name: string;
  title?: string;
  avatar?: { url: string; alt?: string };
  companyLogo?: { url: string; alt?: string };
}

const { quote, name, title, avatar, companyLogo } = Astro.props;
---

<section class="bg-gray-50 py-12 sm:py-16">
  <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
    {avatar?.url && (
      <img
        src={avatar.url}
        alt={avatar.alt || name}
        class="mx-auto h-16 w-16 rounded-full object-cover"
        loading="lazy"
      />
    )}
    <blockquote class="mt-6 text-lg font-medium text-gray-900 leading-relaxed sm:text-xl">
      &ldquo;{quote}&rdquo;
    </blockquote>
    <div class="mt-6">
      <p class="font-semibold text-gray-900">{name}</p>
      {title && <p class="text-sm text-gray-500">{title}</p>}
    </div>
    {companyLogo?.url && (
      <img
        src={companyLogo.url}
        alt={companyLogo.alt || "Company logo"}
        class="mx-auto mt-4 h-6 object-contain opacity-60"
        loading="lazy"
      />
    )}
  </div>
</section>
