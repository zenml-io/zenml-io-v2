---
/**
 * FeatureHero â€” hero section for feature detail pages.
 *
 * Renders: category badge, H1 title, deck/subtitle, hero image,
 * and two CTAs (primary + secondary).
 */
import Button from "../Button.astro";

interface Props {
  title: string;
  category: string;
  deck: string;
  image?: { url: string; alt?: string };
  primaryCta: { label: string; href: string; external?: boolean };
  secondaryCta?: { label: string; href: string; external?: boolean };
}

const { title, category, deck, image, primaryCta, secondaryCta } = Astro.props;
---

<section class="bg-white pt-12 pb-16 sm:pt-16 sm:pb-24">
  <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
    <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500">
      {category}
    </p>
    <h1 class="mt-2 text-3xl font-bold text-gray-900 sm:text-4xl lg:text-5xl">
      {title}
    </h1>
    <p class="mt-4 text-lg text-gray-600 leading-relaxed">{deck}</p>

    <div class="mt-8 flex flex-col items-center gap-3 sm:flex-row sm:justify-center">
      <Button href={primaryCta.href} size="lg" target={primaryCta.external ? "_blank" : undefined}>
        {primaryCta.label}
      </Button>
      {secondaryCta && (
        <Button
          href={secondaryCta.href}
          variant="ghost"
          size="lg"
          target={secondaryCta.external ? "_blank" : undefined}
        >
          {secondaryCta.label}
          <svg class="ml-1 h-4 w-4" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.667 10h11.666m0 0L10.5 4.167M16.333 10 10.5 15.833" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </Button>
      )}
    </div>

    {image?.url && (
      <div class="mt-10">
        <img
          src={image.url}
          alt={image.alt || title}
          class="w-full rounded-xl shadow-lg"
          loading="eager"
        />
      </div>
    )}
  </div>
</section>
