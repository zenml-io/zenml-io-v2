---
/**
 * FeatureComplianceBanner â€” SOC2/ISO compliance banner.
 *
 * Used only on the security-guardrails-always feature page.
 * Renders compliance badge images + headline + body text.
 */
interface Props {
  eyebrow?: string;
  headline?: string;
  body?: string;
  badges?: { url: string; alt?: string }[];
}

const {
  eyebrow = "ZenML is SOC2 and ISO 27001 Compliant",
  headline = "We Take Security Seriously",
  body = "ZenML is SOC2 and ISO 27001 compliant, validating our adherence to industry-leading standards for data security, availability, and confidentiality.",
  badges = [],
} = Astro.props;
---

<section class="bg-white py-12 sm:py-16">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="rounded-2xl bg-gradient-to-r from-gray-900 to-gray-800 p-8 sm:p-12">
      <div class="flex flex-col items-center gap-8 sm:flex-row">
        {badges.length > 0 && (
          <div class="flex flex-shrink-0 gap-4">
            {badges.map((badge) => (
              <img
                src={badge.url}
                alt={badge.alt || "Compliance badge"}
                class="h-24 w-auto"
                loading="lazy"
              />
            ))}
          </div>
        )}
        <div>
          <p class="text-sm font-semibold uppercase tracking-wider text-zenml-400">
            {eyebrow}
          </p>
          <h3 class="mt-1 text-xl font-bold text-white sm:text-2xl">{headline}</h3>
          <p class="mt-2 text-gray-300 leading-relaxed">{body}</p>
        </div>
      </div>
    </div>
  </div>
</section>
