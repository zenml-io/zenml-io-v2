---
/**
 * VsTestimonial â€” dark-themed customer quote block for VS category pages.
 *
 * Renders a testimonial on a dark background with avatar, quote,
 * attribution, and optional company logo. Similar to FeatureTestimonial
 * but with dark styling matching the Webflow testimonial02 pattern.
 */
interface Props {
  quote: string;
  name: string;
  title?: string;
  avatar?: { url: string; alt?: string };
  companyLogo?: { url: string; alt?: string };
}

const { quote, name, title, avatar, companyLogo } = Astro.props;
---

<section class="bg-gray-900 py-12 sm:py-16">
  <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
    <blockquote class="text-lg font-medium text-white leading-relaxed sm:text-xl">
      &ldquo;{quote}&rdquo;
    </blockquote>
    <div class="mt-8 flex items-center justify-center gap-4">
      {avatar?.url && (
        <img
          src={avatar.url}
          alt={avatar.alt || name}
          class="h-12 w-12 rounded-full object-cover"
          loading="lazy"
        />
      )}
      <div class="text-left">
        <p class="font-semibold text-white">{name}</p>
        {title && <p class="text-sm text-gray-400">{title}</p>}
      </div>
      {companyLogo?.url && (
        <img
          src={companyLogo.url}
          alt={companyLogo.alt || "Company logo"}
          class="ml-4 h-6 object-contain opacity-70"
          loading="lazy"
        />
      )}
    </div>
  </div>
</section>
