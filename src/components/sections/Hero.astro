---
/**
 * Hero — centered headline, subheadline, dual CTAs, and Lottie pipeline animation.
 *
 * Matches the original Webflow layout: single centered column with the
 * Lottie animation (hero-0925.json) rendering below the CTA buttons.
 * The animation plays once on load (6.4s, 60fps, SVG renderer).
 */
import { HERO } from "../../lib/homepage";
import Button from "../Button.astro";
import LottieHero from "../islands/LottieHero";
---

<header class="relative overflow-hidden bg-white pb-8 pt-12 sm:pb-12 sm:pt-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {/* Centered text block */}
    <div class="mx-auto max-w-3xl text-center">
      {HERO.eyebrow && (
        <p class="mb-4 text-sm font-semibold uppercase tracking-wider text-zenml-500">
          {HERO.eyebrow}
        </p>
      )}
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-[3.5rem] lg:leading-[1.1]">
        {HERO.headline}
      </h1>
      <p class="mt-5 text-lg leading-relaxed text-gray-600 sm:text-xl">
        {HERO.subheadline}
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href={HERO.primaryCta.href} size="lg">
          {HERO.primaryCta.label}
        </Button>
        <Button href={HERO.secondaryCta.href} variant="secondary" size="lg">
          {HERO.secondaryCta.label}
        </Button>
      </div>
    </div>

    {/* Lottie pipeline animation — visible on md+ screens */}
    <div class="mx-auto mt-10 max-w-5xl">
      <LottieHero client:load src={HERO.lottieUrl} />
    </div>
  </div>
</header>
