---
/**
 * Hero — headline, subheadline, dual CTAs, and Lottie animation placeholder.
 *
 * The original Webflow hero uses a Lottie JSON animation (hero-0925.json).
 * For now we render a gradient placeholder; a Preact island for Lottie
 * can be added later.
 */
import { HERO } from "../../lib/homepage";
import Button from "../Button.astro";
---

<header class="relative overflow-hidden bg-white pb-16 pt-12 sm:pb-24 sm:pt-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid items-center gap-12 lg:grid-cols-2">
      <!-- Text column -->
      <div class="max-w-2xl">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
          {HERO.headline}
        </h1>
        <p class="mt-6 text-lg leading-relaxed text-gray-600 sm:text-xl">
          {HERO.subheadline}
        </p>
        <div class="mt-8 flex flex-wrap gap-4">
          <Button href={HERO.primaryCta.href} size="lg">
            {HERO.primaryCta.label}
          </Button>
          <Button href={HERO.secondaryCta.href} variant="secondary" size="lg">
            {HERO.secondaryCta.label}
          </Button>
        </div>
        <!-- GitHub stars badge -->
        <div class="mt-6">
          <a
            href={HERO.githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-gray-700"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            <span>Star us on GitHub</span>
          </a>
        </div>
      </div>

      <!-- Visual column — Lottie placeholder -->
      <div class="relative hidden lg:block">
        <div class="aspect-square w-full rounded-2xl bg-gradient-to-br from-zenml-50 via-purple-50 to-zenml-100 p-8">
          <div class="flex h-full items-center justify-center text-zenml-300">
            <svg class="h-32 w-32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
