---
/**
 * ComplianceSection — split layout with architecture diagram + compliance badges.
 *
 * Left side: headline + body text + architecture diagram showing
 * that ZenML only accesses metadata (data stays in customer's VPC).
 * Right side: SOC2 + ISO 27001 badges with explanatory text.
 */
import { COMPLIANCE } from "../../lib/homepage";
---

<section class="bg-gray-50 py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid items-center gap-12 lg:grid-cols-2">
      <!-- Left: text + diagram -->
      <div>
        <p class="text-sm font-semibold uppercase tracking-wider text-zenml-500">
          {COMPLIANCE.eyebrow}
        </p>
        <h2 class="mt-2 text-3xl font-bold text-gray-900 sm:text-4xl">
          {COMPLIANCE.headline}
        </h2>
        <p class="mt-4 text-lg text-gray-600">{COMPLIANCE.body}</p>
        <div class="mt-8 overflow-hidden rounded-xl border border-gray-200 shadow-sm">
          <picture>
            <source media="(max-width: 767px)" srcset={COMPLIANCE.architectureImageMobile} />
            <img
              src={COMPLIANCE.architectureImage}
              alt="ZenML architecture — metadata layer on top of your infrastructure"
              class="w-full"
              loading="lazy"
            />
          </picture>
        </div>
      </div>

      <!-- Right: compliance badges -->
      <div class="rounded-xl bg-white p-8 shadow-sm border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900">
          {COMPLIANCE.badgeHeadline}
        </h3>
        <p class="mt-1 text-sm font-semibold text-zenml-500">
          {COMPLIANCE.badgeSubheadline}
        </p>
        <p class="mt-4 text-sm leading-relaxed text-gray-600">
          {COMPLIANCE.badgeBody}
        </p>
        <div class="mt-8 flex items-center gap-6">
          <img
            src={COMPLIANCE.soc2Badge}
            alt="SOC2 Type II certified"
            class="h-20 w-auto"
            loading="lazy"
          />
          <img
            src={COMPLIANCE.iso27001Badge}
            alt="ISO 27001 certified"
            class="h-20 w-auto"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>
