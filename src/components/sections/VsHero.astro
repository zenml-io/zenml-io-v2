---
/**
 * VsHero â€” hero section for VS category pages.
 *
 * Renders eyebrow, headline, deck, and two CTAs.
 * Used on /vs/zenml-vs-* pages.
 */
import Button from "../Button.astro";

interface Props {
  eyebrow?: string;
  headline: string;
  deck?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}

const { eyebrow, headline, deck, primaryCta, secondaryCta } = Astro.props;
---

<section class="bg-white pt-16 pb-12 sm:pt-24 sm:pb-16">
  <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
    {eyebrow && (
      <span class="mb-3 inline-block rounded-full bg-zenml-100 px-4 py-1.5 text-sm font-semibold text-zenml-700">
        {eyebrow}
      </span>
    )}
    <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl lg:text-5xl">
      {headline}
    </h1>
    {deck && (
      <p class="mt-4 text-lg text-gray-600 leading-relaxed">
        {deck}
      </p>
    )}
    <div class="mt-8 flex flex-col items-center gap-3 sm:flex-row sm:justify-center">
      <Button href={primaryCta.href} size="lg">
        {primaryCta.label}
      </Button>
      {secondaryCta && (
        <Button href={secondaryCta.href} variant="secondary" size="lg">
          {secondaryCta.label}
        </Button>
      )}
    </div>
  </div>
</section>
