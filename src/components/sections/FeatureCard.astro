---
/**
 * FeatureCard â€” card component for the features hub grid.
 *
 * Renders a card with icon, category label, title, summary,
 * and "Learn more" link. Matches Webflow layout47_content styling.
 */
interface Props {
  href: string;
  category: string;
  title: string;
  summary: string;
  iconSvg?: string;
  badge?: "PRO";
}

const { href, category, title, summary, iconSvg, badge } = Astro.props;
---

<div class="feature-card group">
  <div class="flex items-center gap-2">
    {iconSvg && <div class="h-6 w-6 shrink-0" set:html={iconSvg} />}
    <span class="text-base font-semibold text-zenml-500">
      {category}
    </span>
    {badge === "PRO" && (
      <span class="rounded bg-zenml-50 px-1.5 py-0.5 text-[10px] font-bold uppercase text-zenml-600">
        PRO
      </span>
    )}
  </div>
  <h3 class="mt-3 text-2xl font-bold text-gray-900 leading-snug">
    {title}
  </h3>
  <p class="mt-2 flex-1 text-base text-gray-600 leading-relaxed">{summary}</p>
  <div class="mt-4">
    <a
      href={href}
      class="inline-flex items-center text-sm font-semibold text-purple-700 group-hover:text-purple-800 transition-colors duration-300"
    >
      Learn more
      <svg class="ml-1 h-4 w-4 transition-transform duration-300 group-hover:translate-x-0.5" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M4.667 10h11.666m0 0L10.5 4.167M16.333 10 10.5 15.833" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    border-radius: var(--radius-md);
    border: 1px solid #f2f4f7;
    background: linear-gradient(135deg, #fcfcfc, #fff);
    transition: all 300ms cubic-bezier(0.77, 0, 0.175, 1);
  }
  .feature-card:hover {
    border-color: #7a3ef4;
    background: linear-gradient(135deg, #f9f4ff, #fff);
    transform: translateY(-10px);
    box-shadow: var(--shadow-medium);
  }
</style>
