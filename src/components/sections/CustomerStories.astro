---
/**
 * CustomerStories — case study cards + LLMOps banner + testimonial grid.
 *
 * Matches Webflow homepage layout:
 *   1. Header + 4 case study cards (gray bg, centered logos, title below)
 *   2. Dark purple LLMOps banner linking to /llmops-database
 *   3. 6 curated testimonials in a 3×2 grid (company logo, quote, avatar)
 */
import {
  CUSTOMER_STORIES_HEADER,
  CASE_STUDY_CARDS,
  HOMEPAGE_TESTIMONIALS,
  LLMOPS_BANNER,
} from "../../lib/homepage";
---

<section class="bg-white py-16 sm:py-24" data-reveal-scope="customer-stories">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        {CUSTOMER_STORIES_HEADER.headline}
      </h2>
      <p class="mt-3 text-lg text-gray-600">
        {CUSTOMER_STORIES_HEADER.subheadline}
      </p>
    </div>

    <!-- Case study cards — tall gray cards with centered logos, titles below -->
    <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {CASE_STUDY_CARDS.map((card, i) => (
        <a href={card.href} class="group block" data-reveal style={`transition-delay:${i * 80}ms`}>
          <div
            class="flex h-[200px] w-full items-center justify-center rounded-lg bg-gray-50 p-6"
            style="background-image:url('/images/zenml_light_bg-02.avif');background-size:640px;background-position:0 0;"
          >
            <div class="flex items-center gap-3">
              <img
                src={card.companyLogo}
                alt={card.companyLogoAlt}
                class="h-10 w-auto max-w-[140px] object-contain"
                loading="lazy"
              />
              {card.secondaryLogo && (
                <img
                  src={card.secondaryLogo}
                  alt={card.secondaryLogoAlt}
                  class="h-10 w-auto max-w-[100px] object-contain"
                  loading="lazy"
                />
              )}
            </div>
          </div>
          <h3 class="mt-8 text-2xl font-bold leading-[1.4] text-gray-900 transition group-hover:text-zenml-500">
            {card.title}
          </h3>
        </a>
      ))}
    </div>

    <!-- LLMOps banner — dark purple with arrow button -->
    <a
      href={LLMOPS_BANNER.href}
      class="mt-10 flex items-center justify-between rounded-md px-8 pt-4 pb-6 shadow-md transition hover:brightness-110"
      style="background-image:linear-gradient(45deg,var(--color-primary-700),var(--color-primary-600));"
    >
      <div>
        <p class="text-2xl font-semibold text-white">{LLMOPS_BANNER.headline}</p>
        <p class="text-base text-white/80">{LLMOPS_BANNER.subtext}</p>
      </div>
      <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-[10px] bg-zenml-500 text-white">
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M19 12l-7-7M19 12l-7 7" />
        </svg>
      </div>
    </a>

    <!-- Testimonials — curated 3×2 grid matching Webflow -->
    <div class="mt-16 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {HOMEPAGE_TESTIMONIALS.map((t, i) => (
        <div class="flex flex-col rounded-md border border-gray-200 bg-white p-6" data-reveal style={`transition-delay:${i * 80}ms`}>
          {/* Company logo or fallback name */}
          <div class="mb-4 flex h-8 items-center">
            {t.companyLogoUrl ? (
              <img
                src={t.companyLogoUrl}
                alt={t.companyName || ""}
                class="h-6 w-auto object-contain"
                loading="lazy"
              />
            ) : t.companyName ? (
              <span class="text-base font-semibold text-gray-400">
                {t.companyName}
              </span>
            ) : null}
          </div>

          {/* Quote text */}
          <blockquote class="flex-1 text-sm leading-relaxed text-gray-700">
            {t.text}
          </blockquote>

          {/* Author */}
          <div class="mt-5 flex items-center gap-3">
            {t.avatarUrl ? (
              <img
                src={t.avatarUrl}
                alt={t.name}
                class="h-10 w-10 rounded-full object-cover"
                loading="lazy"
              />
            ) : (
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-zenml-100 text-sm font-bold text-zenml-600">
                {t.name.split(" ").map((n) => n[0]).join("")}
              </div>
            )}
            <div>
              <p class="text-sm font-semibold text-gray-900">{t.name}</p>
              <p class="text-xs text-gray-500">{t.position}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  [data-reveal] {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  [data-reveal].in-view {
    opacity: 1;
    transform: translateY(0);
  }
  @media (prefers-reduced-motion: reduce) {
    [data-reveal] {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  const section = document.querySelector('[data-reveal-scope="customer-stories"]');
  if (section) {
    const revealEls = section.querySelectorAll("[data-reveal]");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1, rootMargin: "0px 0px -40px 0px" },
    );
    revealEls.forEach((el) => observer.observe(el));
  }
</script>
