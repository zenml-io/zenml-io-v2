---
/**
 * Badge â€” small chip for tags, categories, status indicators.
 * Renders as <a> when href is provided, <span> otherwise.
 */
type Variant = "gray" | "primary" | "success" | "warning" | "blue";

interface Props {
  href?: string;
  variant?: Variant;
  class?: string;
}

const { href, variant = "gray", class: className } = Astro.props;

const baseClasses =
  "inline-flex items-center rounded-radius-pill px-2.5 py-0.5 text-xs font-medium transition-colors";

const variantClasses: Record<Variant, string> = {
  gray: "bg-gray-100 text-gray-700 hover:bg-gray-200",
  primary: "bg-purple-50 text-purple-700 hover:bg-purple-100",
  success: "bg-success-50 text-success-700",
  warning: "bg-orange-50 text-orange-700",
  blue: "bg-blue-50 text-blue-700",
};

const classes = [baseClasses, variantClasses[variant], className]
  .filter(Boolean)
  .join(" ");
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <span class={classes}>
      <slot />
    </span>
  )
}
