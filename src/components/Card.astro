---
/**
 * Card â€” flexible container with optional link wrapper.
 * Renders as <a> when href is provided, <div> otherwise.
 */
interface Props {
  href?: string;
  class?: string;
  padded?: boolean;
}

const { href, class: className, padded = true } = Astro.props;

const baseClasses = [
  "block rounded-xl border border-gray-200 bg-white shadow-card transition-all duration-200",
  padded ? "p-6" : "",
  href ? "hover:shadow-medium hover:-translate-y-0.5" : "",
  className,
]
  .filter(Boolean)
  .join(" ");
---

{
  href ? (
    <a href={href} class={baseClasses}>
      <slot />
    </a>
  ) : (
    <div class={baseClasses}>
      <slot />
    </div>
  )
}
