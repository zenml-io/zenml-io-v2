---
/**
 * Integration detail hero â€” centered logo lockup + GitHub button.
 *
 * Matches Webflow: "Integrations" background label, integration logo + "and" + ZenML mono logo,
 * short description, and GitHub CTA button.
 */
interface Props {
  title: string;
  shortDescription?: string;
  logo?: { url: string; alt?: string };
  githubUrl?: string;
  githubLinkText?: string;
}

const { title, shortDescription, logo, githubUrl, githubLinkText } =
  Astro.props;
---

<div class="bg-white">
  <div class="mx-auto max-w-3xl px-4 py-16 text-center sm:px-6 sm:py-20 lg:px-8">
    <div class="zen-heading-with-bg">Integrations</div>

    {/* Logo lockup: integration logo + "and" + ZenML logo */}
    <div class="flex items-center justify-center gap-4">
      {logo && (
        <div class="flex h-20 w-20 items-center justify-center rounded-md bg-gray-50 p-3">
          <img
            src={logo.url}
            alt={logo.alt || title}
            width="56"
            height="56"
            class="h-14 w-14 object-contain"
          />
        </div>
      )}
      <span class="text-lg font-medium text-gray-400">and</span>
      <div class="flex h-20 w-20 items-center justify-center rounded-md bg-gray-50 p-3">
        <img
          src="/images/zenml-logo-monocolor.svg"
          alt="ZenML"
          width="56"
          height="56"
          class="h-14 w-14 object-contain"
        />
      </div>
    </div>

    {shortDescription && (
      <p class="mx-auto mt-6 max-w-xl text-lg text-gray-600">{shortDescription}</p>
    )}

    {githubUrl && (
      <div class="mt-6">
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-sm font-medium text-gray-900 shadow-sm transition-colors hover:bg-gray-50"
        >
          <img src="/images/icon-github.svg" alt="" width="20" height="20" class="h-5 w-5" />
          {githubLinkText || "GitHub"}
        </a>
      </div>
    )}
  </div>
</div>

<style>
  .zen-heading-with-bg {
    display: inline-flex;
    margin-bottom: 1.5rem;
    border-radius: var(--radius-md);
    background-color: var(--color-primary-600);
    background-image: linear-gradient(140deg, var(--color-primary-600), #b0f);
    color: white;
    padding: 4px 8px;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.5;
  }
</style>
