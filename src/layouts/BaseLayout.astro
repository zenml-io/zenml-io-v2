---
/**
 * BaseLayout — the root HTML shell for every page.
 * Renders <head> with full SEO meta, plus Navigation and Footer chrome.
 *
 * All page templates (ContentLayout, BlogLayout, etc.) wrap this layout
 * and pass SEOProps through to control their meta tags.
 */
import { resolveSeo, type SEOProps } from "../lib/seo";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import CookieConsent from "../components/islands/CookieConsent.tsx";
import "../styles/global.css";
import "@fontsource/inconsolata/latin-400.css";
import "@fontsource/inconsolata/latin-700.css";

interface Props extends SEOProps {
  /** Additional classes on <body> */
  bodyClass?: string;
}

const { bodyClass, ...seoProps } = Astro.props;
const seo = resolveSeo(seoProps, Astro.url.pathname);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* Core SEO */}
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <link rel="canonical" href={seo.canonical} />
    {seo.noindex && <meta name="robots" content="noindex, nofollow" />}

    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seo.ogTitle} />
    <meta property="og:description" content={seo.ogDescription} />
    <meta property="og:url" content={seo.canonical} />
    {seo.ogImage && <meta property="og:image" content={seo.ogImage} />}

    {/* Twitter Card */}
    <meta name="twitter:card" content={seo.twitterCard} />
    <meta name="twitter:title" content={seo.ogTitle} />
    <meta name="twitter:description" content={seo.ogDescription} />
    {seo.ogImage && <meta name="twitter:image" content={seo.ogImage} />}

    {/* Favicon & manifest */}
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    {/* Structured data (JSON-LD) — injected by child layouts */}
    <slot name="head" />

    {/* GitHub stars button — renders the star count iframe in navbar */}
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    {/* Plausible analytics — Essential, but hostname-gated to avoid polluting
        analytics with preview-deploy traffic (import.meta.env.PROD is true on previews) */}
    <script is:inline>
      if (window.location.hostname === 'www.zenml.io') {
        var s = document.createElement('script');
        s.defer = true;
        s.dataset.domain = 'zenml.io';
        s.src = 'https://plausible.io/js/script.js';
        document.head.appendChild(s);
      }
    </script>
  </head>
  <body class:list={["min-h-screen bg-white text-gray-900 antialiased", bodyClass]}>
    <slot name="before-nav" />
    <Navigation currentPath={Astro.url.pathname} />
    <slot />
    <Footer />
    <CookieConsent client:load />
  </body>
</html>
